@using WebApplication1616.Models;
@model RoleBaseLoginModel
@{
    ViewData["Title"] = "Access";
    Layout = "~/Views/Shared/_RoleBasedLayout.cshtml";
}

<h1>Access</h1>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <div class="shadow p-4">
                        <div class="row mb-3">
                            <div class="col-lg-2">
                                <label>EmailID<span class="text-danger">*</span></label>
                            </div>
                            <div class="col-lg-7">
                                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", placeholder="Enter EmailID" })

                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-lg-2">
                                <label>Password<span class="text-danger">*</span></label>
                            </div>
                            <div class="col-lg-7">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder="Enter Password" })

                            </div>
                        </div>
                        <div class="mb-3" align="center">
                            <button type="submit" class="btn btn-primary">Login</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
