@model IEnumerable<WebApplication1616.Models.FileUploadModel>
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload</title>
</head>
<body>
    @using (Html.BeginForm("Upload", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <span>Select File:</span>
            <input type="file" name="PostedFiles" multiple />
            <input type="submit" value="Upload" />

            <hr />
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
                @foreach (FileUploadModel File in Model)
                {
                    <tr>
                        <td>@File.Name</td>
                        <td><a href="@Url.Action("DownloadFile","Files", new { fileId = File.ID })">Download</a></td>
                    </tr>
                }
            </table>
        }
</body>
</html>
